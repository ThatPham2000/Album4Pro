<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gallery.DetailPhotoDelete"
    android:background="@color/black">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/img_detail_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/detail_image_linearlayout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="?attr/navigationBottomColor">



        <ImageButton
            android:id="@+id/btn_delete_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_back"
            android:layout_weight="1"
            android:background="?attr/navigationBottomColor"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/btn_delete_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_weight="1"
            android:background="?attr/navigationBottomColor"
            android:layout_margin="5dp"/>

    </LinearLayout>

</RelativeLayout>